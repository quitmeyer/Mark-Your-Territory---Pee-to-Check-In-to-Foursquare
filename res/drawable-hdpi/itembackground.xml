<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- focused -->
    <item android:state_focused="true" android:drawable="@drawable/itemclicked"   />
    <!-- focused and pressed-->
    <item android:state_focused="true" android:state_pressed="true" android:drawable="@drawable/itemclicked"  />
    <!-- pressed -->
    <item android:state_pressed="true" android:drawable="@drawable/itemclicked"  />
    <!-- checked -->
    <item android:state_checked="true" android:drawable="@drawable/itemclicked"  />
      <!-- selected -->
    <item android:state_selected="true" android:drawable="@drawable/itemclicked"  />
    <item android:state_selected="true"
 android:state_pressed="false" 
    android:drawable="@drawable/itemclicked" />
    <!-- default -->
    <item android:drawable="@drawable/itemnotclicked"  /> 
</selector>

